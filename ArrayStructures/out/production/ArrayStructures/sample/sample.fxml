<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <AnchorPane minHeight="200.0" minWidth="500.0" prefHeight="500.0" prefWidth="500.0">
         <children>
            <Label layoutX="31.0" layoutY="23.0" prefHeight="27.0" prefWidth="58.0" text="Value">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <Label layoutX="129.0" layoutY="28.0" text="Index">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <TextField fx:id="valuebox" layoutX="77.0" layoutY="26.0" prefHeight="25.0" prefWidth="37.0" />
            <TextField fx:id="indexbox" layoutX="176.0" layoutY="26.0" prefHeight="25.0" prefWidth="37.0" />
            <Button fx:id="insbutton" layoutX="237.0" layoutY="24.0" mnemonicParsing="false" onAction="#insertvalue" text="INSERT" />
            <Button fx:id="findbutton" layoutX="316.0" layoutY="24.0" mnemonicParsing="false" onAction="#getvalueatindex" text="FIND" />
            <Button fx:id="delete" layoutX="380.0" layoutY="24.0" mnemonicParsing="false" onAction="#deletevalueatindex" text="DELETE" />
            <RadioButton fx:id="linear" layoutX="238.0" layoutY="76.0" mnemonicParsing="false" text="Linear" />
            <RadioButton fx:id="binary" layoutX="311.0" layoutY="76.0" mnemonicParsing="false" text="Binary" />
            <Button fx:id="searchbutton" layoutX="405.0" layoutY="72.0" mnemonicParsing="false" onAction="#searchbutton" text="SEARCH" />
            <RadioButton fx:id="ascending" layoutX="27.0" layoutY="76.0" mnemonicParsing="false" text="Ascending" />
            <RadioButton fx:id="descending" layoutX="114.0" layoutY="76.0" mnemonicParsing="false" text="Desecnding" />
            <Button fx:id="sortbutton" layoutX="92.0" layoutY="118.0" mnemonicParsing="false" onAction="#sortselect" text="SORT" />
         </children>
      </AnchorPane>
   </children>
</GridPane>
